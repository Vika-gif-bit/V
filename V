    <script>
        // Ğ”Ğ¾Ğ´Ğ°Ñ”Ğ¼Ğ¾ Ñ–Ğ½Ñ‚ĞµÑ€Ğ°ĞºÑ‚Ğ¸Ğ²Ğ½Ñ–ÑÑ‚ÑŒ
        document.addEventListener('DOMContentLoaded', function() {
            // ĞĞ½Ñ–Ğ¼Ğ°Ñ†Ñ–Ñ Ğ¿Ñ€Ğ¸ ĞºĞ»Ñ–ĞºÑƒ Ğ½Ğ° ĞºĞ½Ğ¾Ğ¿ĞºĞ¸
            const buttons = document.querySelectorAll('.link-button, .social-link');
            
            buttons.forEach(button => {
                button.addEventListener('click', function(e) {
                    // Ğ¯ĞºÑ‰Ğ¾ Ğ¿Ğ¾ÑĞ¸Ğ»Ğ°Ğ½Ğ½Ñ Ğ½Ğµ Ğ²ÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½Ğ¾, Ğ¿Ğ¾ĞºĞ°Ğ·ÑƒÑ”Ğ¼Ğ¾ Ğ¿Ğ¾Ğ²Ñ–Ğ´Ğ¾Ğ¼Ğ»ĞµĞ½Ğ½Ñ
                    if (this.getAttribute('href') === '#') {
                        e.preventDefault();
                        alert('Ğ‘ÑƒĞ´ÑŒ Ğ»Ğ°ÑĞºĞ°, Ğ²ÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ñ–Ñ‚ÑŒ Ğ¿Ğ¾ÑĞ¸Ğ»Ğ°Ğ½Ğ½Ñ Ğ´Ğ»Ñ Ñ†Ñ–Ñ”Ñ— ĞºĞ½Ğ¾Ğ¿ĞºĞ¸');
                    }
                    
                    // Ğ”Ğ¾Ğ´Ğ°Ñ”Ğ¼Ğ¾ ĞµÑ„ĞµĞºÑ‚ Ğ¿ÑƒĞ»ÑŒÑĞ°Ñ†Ñ–Ñ—
                    this.style.transform = 'scale(0.95)';
                    setTimeout(() => {
                        this.style.transform = '';
                    }, 150);
                });
            });

            // Ğ•Ñ„ĞµĞºÑ‚ parallax Ğ´Ğ»Ñ Ñ„Ğ¾Ğ½Ñƒ
            document.addEventListener('mousemove', function(e) {
                const container = document.querySelector('.container');
                const x = (e.clientX - window.innerWidth / 2) / 50;
                const y = (e.clientY - window.innerHeight / 2) / 50;
                
                container.style.transform = translate(${x}px, ${y}px);
            });

            // ĞĞ½Ñ–Ğ¼Ğ°Ñ†Ñ–Ñ Ğ¿Ğ¾ÑĞ²Ğ¸ ĞµĞ»ĞµĞ¼ĞµĞ½Ñ‚Ñ–Ğ² Ğ¿Ñ€Ğ¸ ÑĞºÑ€Ğ¾Ğ»Ñ–
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, observerOptions);

            // Ğ¡Ğ¿Ğ¾ÑÑ‚ĞµÑ€Ñ–Ğ³Ğ°Ñ”Ğ¼Ğ¾ Ğ·Ğ° Ğ²ÑÑ–Ğ¼Ğ° ĞºĞ½Ğ¾Ğ¿ĞºĞ°Ğ¼Ğ¸
            buttons.forEach(button => {
                observer.observe(button);
            });
        });
    </script>
